{
    "name": "@mauriora/announcements-bar-spfx",
    "version": "0.3.4",
    "repository": {
        "type": "git",
        "url": "https://github.com/mauriora/Announcements-Bar-Spfx.git"
    },
    "private": true,
    "workspaces": [
        "shared/**",
        "app/**"
    ],
    "scripts": {
        "clean": "yarn workspaces foreach --verbose --parallel --interlaced run clean",
        "build": "yarn workspaces foreach --verbose --topological-dev --parallel --interlaced run build",
        "rebuild": "yarn workspaces foreach --verbose --topological-dev --parallel --interlaced run rebuild",
        "serve": "yarn workspace @mauriora/announcements-bar-extension serve",
        "version": "yarn version check --interactive && yarn version apply --all && yarn workspaces foreach --verbose --topological --parallel run version",
        "clean-node-modules": "rimraf ./shared/*/node_modules && rimraf app/*/node_modules && rimraf ./node_modules",
        "clean-node-modules-az": "rimraf yarn.lock && yarn clean-node-modules"
    },
    "devDependencies": {
        "@mauriora/workspace-tools": "^0.2.4",
        "rimraf": "^3.0.2",
        "yarn": "^1.0.0"
    },
    "main": "index.js",
    "author": "Dennis Kuhn <dennis@kuhn.geek.nz>",
    "license": "MIT",
    "packageManager": "yarn@3.2.1"
}
