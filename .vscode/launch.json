
{
    "version": "0.2.0",
    "configurations": [        
        {
            "name": "lerna publish",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/lerna/cli.js",
            "stopOnEntry": true,
            "args": ["publish","patch"],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy",
                "--inspect"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "lerna version",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/lerna/cli.js",
            "stopOnEntry": true,
            "args": ["version","patch"],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "--preserve-symlinks",
                "--nolazy",
                "--inspect"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "gulp Bundle",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "stopOnEntry": false,
            "args": ["bundle","--ship"],
            "cwd": "${workspaceRoot}/app/Announcements-Model-Deployment",
            "runtimeArgs": [
                "--nolazy",
                "--inspect"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "gulp Package",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
            "stopOnEntry": false,
            "args": ["package-solution","--ship"],
            "cwd": "${workspaceRoot}/app/Announcements-Model-Deployment",
            "runtimeArgs": [
                "--nolazy",
                "--inspect"
            ],
            "console": "integratedTerminal"
        }
    ]
}

